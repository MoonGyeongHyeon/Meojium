<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <RelativeLayout
        android:id="@+id/relativelayout_museum_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_rectangle_click">

        <ImageView
            android:id="@+id/imageview_museum_thumb"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/textview_museum_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageview_museum_thumb"
            android:layout_margin="8dp"
            android:textSize="@dimen/normal_text_size"
            android:textStyle="bold"
            tools:text="석장리 박물관" />

        <TextView
            android:id="@+id/textview_museum_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_museum_name"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/darkGray"
            android:textSize="@dimen/small_text_size"
            tools:text="충청남도 공주시 금벽로 990" />

    </RelativeLayout>

</android.support.v7.widget.CardView>